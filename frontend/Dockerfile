FROM node:alpine

RUN mkdir - /usr/src
WORKDIR /usr/src

COPY . /usr/src/

RUN npm install

RUN npm run build
EXPOSE 3000

ENV APP_ID=

ENV CLIENT_ID=

ENV CLIENT_SECRET=

ENV SIGNING_SECRET=

ENV BOT_TOKEN=

ENV NEXT_PUBLIC_BACKEND_URL=

ENV NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

ENV STRIP_SECRET_KEY=

ENV NEXT_PUBLIC_SLACK_REDIRECT_URI_LOGIN=

ENV NEXT_PUBLIC_SLACK_REDIRECT_URI_SIGNUP=

CMD ["npm", "start"]